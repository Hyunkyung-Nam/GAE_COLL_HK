    <body>
        <main>
            <div id="contain">
                <!--header 시작-->
                <div id="header">
                    <div id="header-img">
                        <a href="/start" class="start-img"> <img src="../../public/img/start-dog.png" id="start-dog" /></a>
                    </div>
                    <p id="header-text">
                        <a href="/start" class="start-img"><span class="header-text1">개</span>린이 <span class="header-text1">콜</span>라보</a
                        >
                    </p>
                </div>
                <div class="contentWrap">
                <form id="find-user">

                <div class="text-aria">

                    <input type="email" id="email" placeholder="이메일" class="input" style="display: block;" required>
                    <div class="gapCSS"></div>
                    <button type="button" id="email-auth-btn" class="button_yellow_black" onclick="emailAuthPW()" style="display: block;">전송</button>
